<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.grodno.bus"
    android:versionCode="11"
    android:versionName="1.18"
    android:installLocation="preferExternal"
     >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    

    <application
        android:icon="@drawable/bus"
        android:label="@string/app_name" android:theme="@style/Theme.Sherlock"
        >        
        <activity
            android:label="@string/app_name"
            android:theme="@style/Theme.Sherlock"
            android:name=".GrodnoBusActivity" 
            android:configChanges="orientation"
            >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="RoutesActivity"
            android:theme="@style/Theme.Sherlock"
            android:configChanges="orientation"
            ></activity>
        <activity android:name="RouteStopsActivity"
            android:theme="@style/Theme.Sherlock"
            android:configChanges="orientation"
            ></activity>
        <activity android:name="ScheduleActivity"
                 android:theme="@style/Theme.Sherlock"
                 android:configChanges="orientation"
        ></activity>
        <activity android:name="StopsActivity"
            android:theme="@style/Theme.Sherlock"
            android:configChanges="orientation"
            ></activity>
        <activity android:name="StopRoutesActivity"
            android:theme="@style/Theme.Sherlock"
            android:configChanges="orientation"
            ></activity>
        <activity android:name="OptionsActivity"
            	  android:theme="@style/Theme.Sherlock"
            	  android:configChanges="orientation"
            ></activity>
        
    </application>

</manifest>