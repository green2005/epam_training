<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epamtraining.vklite">
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- TODO garbage on my phone? -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:name=".VKApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_vklogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/app_name">
          </activity>

        <activity
            android:name="com.epamtraining.vklite.auth.StartActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.epamtraining.vklite.auth.LoginActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|screenLayout"
            >
         </activity>
        <provider
            android:name=".VKContentProvider"
            android:authorities="com.epamtraining.vk"
            android:enabled="true"
            android:exported="true" >
        </provider>
    </application>
</manifest>
